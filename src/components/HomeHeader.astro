---
import { Image } from "astro:assets"

// Countries
import nigeria from "@assets/flag-nigeria.png"
import liberia from "@assets/flag-liberia.png"
import ghana from "@assets/flag-ghana.png"
import angola from "@assets/flag-angola.png"
import canada from "@assets/flag-canada.png"

// Users
import user1 from "@assets/user-5.png"
import user2 from "@assets/user-4.png"
import user3 from "@assets/user-1.png"
import user4 from "@assets/user-3.png"
import user5 from "@assets/user-6.png"
import NavBar from "./NavBar.astro"
import AnimatedButton from "./AnimatedButton.astro"
---

<header class="header min-h-[85vh] pt-2 relative bg-200% sm:bg-150% lg:bg-100% flex flex-col justify-between">
    <NavBar />
    <div class="mt-10 xs:mt-5 md:mt-0 md:my-16">
        <div class="flex flex-col items-center gap-8">
            <!-- <Image src={count} alt="available countries" class="w-1/3 md:w-1/5 2xl:w-1/6" /> -->
            <div class="flex justify-center">
                <Image
                    src={liberia}
                    alt="Liberia"
                    title="Liberia"
                    class="w-16 h-16 rounded-full border-8 border-white -mr-4"
                />
                <Image
                    src={angola}
                    alt="Angola"
                    title="Angola"
                    class="w-16 h-16 rounded-full border-8 border-white -mr-4"
                />
                <Image
                    src={ghana}
                    alt="Ghana"
                    title="Ghana"
                    class="w-16 h-16 rounded-full border-8 border-white -mr-4"
                />
                <Image
                    src={nigeria}
                    alt="Nigeria"
                    title="Nigeria"
                    class="w-16 h-16 rounded-full border-8 border-white -mr-4"
                />
                <Image src={canada} alt="Canada" title="Canada" class="w-16 h-16 rounded-full border-8 border-white" />
            </div>
            <h1 class="font-extrabold text-3xl xs:text-4xl md:text-6xl text-center flex flex-col gap-2">
                <span
                    >Global
                    <span
                        class="text-transparent bg-gradient-to-r from-brand-primary-950 via-brand-primary-500 to-brand-primary-900 bg-clip-text"
                        >Payments</span
                    >
                    at the</span
                >
                <span>Tip of your Fingers</span>
            </h1>
            <p class="flex flex-col text-center text-gray-500 font-medium text-base md:text-xl">
                <span>Empowering Your Financial Success Unleashing</span>
                <span>the Power of Numbers</span>
            </p>
        </div>
    </div>
    <div class="flex justify-center w-full relative">
        <div class="relative flex justify-center">
            <AnimatedButton classList="bottom-[5%] left-8" imgSrc={user1} transactionAmt="50,000" time="4:28pm" />
            <!-- <Image src={mainUser} alt="user" class="w-[60%] lg:w-auto" /> -->
            <picture>
                <source media="(max-width: 768px)" srcset="/main_user-small.png" />
                <source media="(min-width: 769px)" srcset="/main_user.png" />
                <img src="/main_user.png" alt="Description" class="w-full" />
            </picture>

            <AnimatedButton classList="top-[5%] right-12" imgSrc={user2} transactionAmt="100,000" time="7:15am" />
        </div>

        <AnimatedButton classList="right-40 -top-24" imgSrc={user3} transactionAmt="200,000" time="1:45pm" />

        <AnimatedButton classList="right-10 top-1/3" imgSrc={user4} transactionAmt="150,000" time="11:24am" />
        <AnimatedButton classList="left-40" imgSrc={user5} transactionAmt="420,000" time="9:31am"/>
    </div>
</header>

<style>
    header {
        background-image: url("../assets/mapbase.png"),
            linear-gradient(177.28deg, #e6f5ff 1.8%, #f5fbff 12.9%, #bde2fd30 38.9%, #ffffff5c 74.92%);
        background-position: center bottom;
        background-repeat: no-repeat;
        /* background-size: 200%; */
    }
</style>
