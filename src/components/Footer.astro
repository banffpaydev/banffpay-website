    </div>
    <div class="px-6 md:px-16 lg:px-24 py-6 border-t">
        <p class="text-gray-400">&copy; <span class="currentYear"></span> Banffpay. All rights reserved</p>
    </div>
</footer>

<script type="text/javascript">
    function zforms_open_window(url, height, width) {
        var leftPos = 0
        var topPos = 0
        if (screen) {
            leftPos = (screen.width - width) / 2
            topPos = (screen.height - height) / 2
            window.open(
                url,
                null,
                "width=" +
                    width +
                    ",height=" +
                    height +
                    ",left=" +
                    leftPos +
                    ",top=" +
                    topPos +
                    ", toolbar=0, location=0, status=1, scrollbars=1, resizable=1"
            )
        }
    }
</script>
